---
const { pageTitle } = Astro.props;
const page = new URL(Astro.request.url).pathname;

const pages = [
  ["/", "Home"],
  ["/resume/", "Resume"],
  ["/blog/", "Blog"],
] as const;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="h-full w-full flex justify-center">
    <div class="w-full m-2 max-w-3xl flex-grow">
      <header>
        <nav class="bg-gray-400 pe-1 ps-1 flex flex-row justify-between">
          <div>
            <a href="/">Tom Selfin</a>
          </div>
          <div class="flex flex-row gap-x-3">
            {
              pages.map(([p, t]) => (
                <a class={page === p ? "underline" : ""} href={p}>
                  {t}
                </a>
              ))
            }
          </div>
        </nav>
      </header>
      <main class="prose m-1">
        <slot />
      </main>
    </div>
  </body>
</html>
