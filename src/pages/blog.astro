---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "My Personal Blog";
const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true })
);
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Mainly about programming and philosophy. The goal is to get
    better at
    <a href="https://paulgraham.com/writes.html">thinking by writing</a>.
  </p>
  <h2 class="mt-2 font-bold">Posts</h2>
  <div class="grid grid-cols-2">
    {
      allPosts.map((post: any) => (
          <a href={post.url}>{post.frontmatter.title}</a>
          <p class="truncate me-2">{post.frontmatter.tags.join(', ')}</p>
      ))
    }
  </div>
</BaseLayout>
